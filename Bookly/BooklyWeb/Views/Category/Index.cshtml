@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index Category</h1>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var category in Model)
        {
            <tr>
                <td width="60%">
                    @category.Name
                </td>
                <td width="40%">
                    @category.DisplayOrder
                </td>
            </tr>
        }
    </tbody>
</table>

